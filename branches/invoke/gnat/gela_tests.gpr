with "gela_build";

project Gela_Tests is

   for Main use
     ("lexer_test");

   for Source_Dirs use
     ("../tests/gela/lexer");

   for Object_Dir use Gela_Build.Build & "/tests/gela";

   package Compiler is
      for Default_Switches ("ada") use Gela_Build.Check_Ada_Switches;
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

end Gela_Tests;
