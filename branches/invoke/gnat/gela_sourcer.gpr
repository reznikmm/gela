with "gela_common";
with "gela_context";
with "gela_grammars";

project Gela_Sourcer is

   Build := Gela_Common.Build;
   for Source_Dirs use ("../src/asis/sourcer", Build & "/chop");
   for Object_Dir use Build & "/sourcer";

   package Compiler is
      for Default_Switches ("ada") use Gela_Common.Check_Ada_Switches;
      for Switches ("gela-mutables-lalr_parsers.adb")
        use Gela_Common.Default_Ada_Switches;
   end Compiler;

end Gela_Sourcer;
