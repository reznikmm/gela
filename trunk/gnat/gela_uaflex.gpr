project Gela_Uaflex is

   Build := external ("GELA_BUILD", "/tmp/gela");
   for Source_Dirs use ("../tools/uaflex");
   for Object_Dir use Build & "/uaflex";

   for Main use ("uaflex-driver.adb");

   package Builder is
      for Executable ("uaflex-driver.adb")
        use "uaflex";
   end Builder;

end Gela_Uaflex;
