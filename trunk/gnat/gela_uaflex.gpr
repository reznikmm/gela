project Gela_Uaflex is

   for Source_Dirs use ("../tools/uaflex");
   for Object_Dir use external ("GELA_LIB_DIR", "/tmp/gela/gela");

   for Main use ("uaflex-driver.adb");

   package Compiler is
      for Default_Switches ("ada") use
        ("-gnat95", "-g");
   end Compiler;

   package Builder is
      for Executable ("uaflex-driver.adb")
        use "uaflex";
   end Builder;

end Gela_Uaflex;
