with "gela_lib";

project Gela_XML2Y is

   Build := external ("GELA_BUILD", "/tmp/gela");
   Flags := external_as_list ("FLAGS", " ");
   for Source_Dirs use ("../tools/xml2ayacc/**");
   for Object_Dir use Build & "/xml2ayacc";

   for Main use ("xml_to_y-driver.adb");

   package Compiler is
      for Default_Switches ("ada") use Flags;
   end Compiler;

   package Builder is
      for Executable ("xml_to_y-driver.adb")
        use "xml_to_y";
   end Builder;

end Gela_XML2Y;
