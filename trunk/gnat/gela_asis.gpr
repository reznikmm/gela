with "gela_lib";

project Gela_ASIS is

   Build := external ("GELA_BUILD", "/tmp/gela");
   Source := external ("GELA_SOURCE", "/ada");

   for Source_Dirs use (Build & Source,
     "../source/asis", "../source/asis/xasis");
   for Object_Dir use Build & "/gela_asis";

   package Compiler is
      for Default_Switches ("ada") use
        ("-gnat95", "-g", "-gnata");
   end Compiler;

end Gela_ASIS;
