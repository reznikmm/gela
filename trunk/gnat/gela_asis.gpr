with "gela_lib";

project Gela_ASIS is

   Build := external ("GELA_BUILD", "/tmp/gela");
   for Source_Dirs use (Build & "/ada", "../source/asis", "../source/asis/xasis");
   for Object_Dir use Build & "/gela_asis";

   package Compiler is
      for Default_Switches ("ada") use
        ("-gnat95", "-g");
   end Compiler;

end Gela_ASIS;
