with "league";
with "gela_grammars";

project Gela_AG is
   for Source_Dirs use ("../tools/ag");

   for Main use ("ag_driver", "yacc_driver", "to_ayacc");

   Build := external ("GELA_BUILD", "/tmp/gela");
   for Object_Dir use Build & "/ag";

   Default_Ada_Switches :=
     ("-gnat12", "-gnatW8", "-g", "-gnatyaAbcdefhiIkmnoOprsStux");

   package Compiler is
      for Default_Switches ("ada") use
        Default_Ada_Switches & ("-gnatwea");
   end Compiler;

end Gela_AG;
