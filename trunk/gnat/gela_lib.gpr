project Gela_Lib is

   Build := external ("GELA_BUILD", "/tmp/gela");
   Flags := external_as_list ("FLAGS", " ");
   for Source_Dirs use ("../source/libgela");
   for Object_Dir use Build & "/gela_lib";

   package Compiler is
      for Default_Switches ("ada") use Flags;
   end Compiler;

end Gela_Lib;
