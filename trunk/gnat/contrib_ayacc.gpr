project Gela is

   Build := external ("GELA_BUILD", "/tmp/gela");
   for Source_Dirs use ("../contrib/ayacc/src/");
   for Object_Dir use Build & "/tools";

   for Main use ("ayacc.adb");

   package Compiler is
      for Default_Switches ("ada") use
        ("-gnat95", "-g");
   end Compiler;

end Gela;
