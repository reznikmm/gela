--  GNAT Project file for ASIS2XML.

with "gela_asis";
with "xmlada";

project Gela2XML is

  for Main use ("gela2xml");

  for Source_Dirs use (".");

  for Object_Dir use Gela_ASIS.Build & "/asis";

  package Builder is
     for Default_Switches ("ada") use ("-g");
  end Builder;

  package Compiler is
     for Default_Switches ("ada") use ("-gnatqQafoy", "-gnatwaL", "-gnatW8");
  end Compiler;

  package Binder is
     for Default_Switches ("ada") use ("-E");
  end Binder;

end Gela2XML;
