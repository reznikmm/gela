with "league";
with "gela_uaflex";
with "gela_xml2y";
with "contrib_ayacc";

project Gela_Tests is

   for Source_Dirs use ("../../source", ".");
   for Object_Dir use external ("GELA_LIB_DIR", "/tmp/gela/gela");

   for Main use ("gela-test_driver.adb");

   package Compiler is
      for Default_Switches ("ada") use
        ("-gnatwae", "-gnatW8", "-gnatiw", "-gnaty",
         "-gnatVa", "-gnat05", "-g");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Naming is
      for Implementation ("Gela.XSLT")
         use "gela-xslt-litxslt.adb";
   end Naming;

end Gela_Tests;
