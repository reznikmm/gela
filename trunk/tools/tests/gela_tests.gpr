with "league";
with "../../gnat/gela_uaflex";
with "../../gnat/gela_xml2y";
with "../../gnat/contrib_ayacc";

project Gela_Tests is

   Build := external ("GELA_BUILD", "/tmp/gela");

   for Source_Dirs use (".");
   for Object_Dir use Build & "/tools";
   for Exec_Dir use Build;
   for Main use ("gela-test_driver.adb");

   package Compiler is
      for Default_Switches ("ada") use
        ("-gnatwae", "-gnatW8", "-gnatiw", "-gnaty",
         "-gnatVa", "-gnat05", "-g");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Naming is
      for Implementation ("Gela.XSLT")
         use "gela-xslt-litxslt.adb";
   end Naming;

end Gela_Tests;
